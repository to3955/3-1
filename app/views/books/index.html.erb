<h1>Books</h1>


 <table>

   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>

   <% @books.each do |book| %>

   <tr>
     <td><span><%= book.title %></span></td>
     <td><span><%= book.body %></span></td>
     <td><%= link_to "show",book_path(book.id) %></td>
     <td><%= link_to "edit",edit_book_path(book.id) %></td>
     <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Aer you sure?" %> </td>
   </tr>



  <% end %>

</table>

  <h1>New book</h1>

  <% if @book.errors.any? %>

  <%= @book.errors.count %> error has occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>